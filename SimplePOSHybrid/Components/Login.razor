@layout LoginLayout
@page "/"




<MudGrid>
    <MudItem xs="12" Class="d-flex align-center justify-center ">
        <MudImage Src="./Img/logo.jpeg"  Width="200" Height="200" Alt="logo" Elevation="25" Class="rounded-lg ma-4" Style="box-shadow:none"    />
    </MudItem>
    <MudItem xs="12" Class="d-flex align-center justify-center">
        <MudTextField @bind-Value="Username" Label="User Name" Variant="Variant.Outlined" Class="ma-20" ></MudTextField>
    </MudItem>
    <MudItem xs="12" Class="d-flex align-center justify-center ">
        <MudTextField @bind-Value="Password" Label="Password" Variant="Variant.Outlined" 
            InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon"
            OnAdornmentClick="ButtonTestclick" AdornmentAriaLabel="Show Password" />
    </MudItem>
    <MudItem xs="12" Class="d-flex align-center justify-center ">
        <MudTextField @bind-Value="Environmentname" Label="Environment Name" Variant="Variant.Outlined" ></MudTextField>
    </MudItem>
    <MudItem xs="12" Class="d-flex align-center justify-center ">

    </MudItem>
    <MudItem xs="12" Class="d-flex align-center justify-center ">
        <MudButton Variant="Variant.Filled" Style="background-color:#02198B;color:white">Login</MudButton>
    </MudItem>
    <MudItem xs="12" Class="d-flex align-center justify-center ">
        <MudImage Src="./Img/banner.jpeg" Width="200" Height="80" Alt="logo" Elevation="25" Class="rounded-lg ma-4" Style="box-shadow:none" />
    </MudItem>
</MudGrid>



@code {
    public string Username { get; set; }

    public string Password { get; set; } = "superstrong123";

    public string Environmentname { get; set; }



    bool isShow;
    InputType PasswordInput = InputType.Password;
    string PasswordInputIcon = Icons.Material.Filled.VisibilityOff;

    void ButtonTestclick()
    {
        @if (isShow)
        {
            isShow = false;
            PasswordInputIcon = Icons.Material.Filled.VisibilityOff;
            PasswordInput = InputType.Password;
        }
        else
        {
            isShow = true;
            PasswordInputIcon = Icons.Material.Filled.Visibility;
            PasswordInput = InputType.Text;
        }
    }
}
