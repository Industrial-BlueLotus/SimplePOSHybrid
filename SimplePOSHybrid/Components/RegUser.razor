<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="6">
                <MudTextField T="string" Label="No" ></MudTextField>
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="Customer Name"></MudTextField>
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="Contact Number"></MudTextField>
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="Email Address"></MudTextField>
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="Door No"></MudTextField>
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="Address Line1"></MudTextField>
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="City"></MudTextField>
            </MudItem>
            <MudItem xs="6">
                <MudTextField T="string" Label="Postal Code"></MudTextField>
            </MudItem>
        </MudGrid>
        
    </DialogContent>
    <DialogActions>
        <MudButton Style="background-color:#053B71;color:white" Variant="Variant.Filled" OnClick="Submit">Add Customer</MudButton>
        <MudButton Style="color:#053B71;border-color:#053B71" OnClick="Cancel" Variant="Variant.Outlined">Clear</MudButton>
        
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}